{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@modules/*": ["./modules/*"],
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"],
      "@types/*": ["./types/*"],
      "@navigation/*": ["./navigation/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
